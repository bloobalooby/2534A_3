<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Custom app theme using Material3 with NO system ActionBar -->
    <style name="Theme.Lab_REST" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary branding colors -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_900</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/amber_500</item>
        <item name="colorSecondaryVariant">@color/amber_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar and navigation bar color -->
        <item name="android:statusBarColor">@color/teal_900</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- ðŸš« REMOVE these to disable the built-in ActionBar -->
        <!-- <item name="actionBarTheme">@style/Widget.MaterialComponents.ActionBar.Solid</item> -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>

